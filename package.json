{
	"name": "lukes-projects",
	"version": "1.0.0",
	"private": true,
	"main": "index.js",
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"type": "module",
	"packageManager": "npm@10.8.2",
	"engines": {
		"node": ">=20.0.0"
	},
	"scripts": {
		"clean": "git clean -xdf -- dist node_modules \"**/*.tsbuildinfo\" \"**/.tsbuildinfo*\"",
		"build": "tsc -b",
		"build:server": "tsc -p apps/server/tsconfig.build.json",
		"dev:server": "npm run dev -w @lukes-projects/server",
		"drizzle:generate": "drizzle-kit generate --config ./drizzle.config.ts",
		"drizzle:migrate": "tsx packages/db/src/migrate.ts",
		"drizzle:seed": "tsx packages/db/src/seed.ts",
		"db:push": "npm run drizzle:generate && npm run drizzle:migrate"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/przekwas/lukes-projects.git"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/przekwas/lukes-projects/issues"
	},
	"homepage": "https://github.com/przekwas/lukes-projects#readme",
	"description": "",
	"devDependencies": {
		"tsx": "^4.20.4"
	},
	"dependencies": {
		"bcryptjs": "^3.0.2",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.2"
	}
}
